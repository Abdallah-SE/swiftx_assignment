<!--Include header file-->
<%- include('include/_header')%>
<form autocomplete="off" action="/api/users/:id" id="edit_user" class="appForm clearfix" method="post" enctype="application/x-www-form-urlencoded">
    <fieldset>
        <legend>Edit The account</legend>
        <input required type="hidden" name="id" id="id" maxlength="255" value="<%=user._id%>">
        <div class="input_wrapper n90 border">
            <label class="floated">Name</label>
            <input required type="text" name="name" id="name" maxlength="50" value="<%=user.name%>" autocomplete="on">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Password</label>
            <input required type="password" name="password" id="password" maxlength="60" value="" autocomplete="on">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Email</label>
            <input required type="email" name="email" id="email" maxlength="100" value="<%=user.email%>" autocomplete="on">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Role</label>
            <input required type="text" name="role" id="role" maxlength="50" value="<%=user.role%>" autocomplete="on">
        </div>
        <input style="text-align:center;float:center;" class="no_float" type="submit" id="edit" name="edit" value="edit">
    </fieldset>
</form>
<!--Include footer file-->
<%- include('include/_footer')%>
