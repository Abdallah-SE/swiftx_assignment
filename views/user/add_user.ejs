<!--Include header file-->
<%- include('../include/_header')%>
<form autocomplete="off" action="/api/users" id="add_user" class="appForm clearfix" method="post" enctype="application/x-www-form-urlencoded">
    <fieldset>
        <legend>Create new account</legend>
        <div class="input_wrapper n90 border">
            <label class="floated">Name</label>
            <input required type="text" name="name" id="name" maxlength="50" value="">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Password</label>
            <input required type="password" name="password" id="" maxlength="60" value="">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Email</label>
            <input required type="email" name="email" id="" maxlength="100" value="">
        </div>
        <div class="input_wrapper n90 border">
            <label class="floated">Role</label>
            <input required type="text" name="role" id="" maxlength="50" value="">
        </div>
        <input style="text-align:center;float:center;" class="no_float" type="submit" name="submit" value="Save">
    </fieldset>
</form>
<!--Include footer file-->
<%- include('../include/_footer')%>
