<!--Include header file-->
<%- include('include/_header')%>
<h1>
  <table style="width:90%">
    <thead>
      <p>The user information</p>
      <a href="/add_user" class="btn btn-xs btn-default">Add New User<span class="glyphicon glyphicon-edit"></span></a>
    </thead>
    <tr>
      <th>Numbering</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  <%for(let i=0;i<users.length;i++){%>
  <tr>
    <td><%=i+1%></td>
    <td><%=users[i].user_name%></td>
    <td><%=users[i].email%></td>
    <td><%=users[i].role%></td>
    <td>
      <a href="" class="btn btn-xs btn-default">Edit<span class="glyphicon glyphicon-edit"></span></a>
      <a href="" class="btn btn-xs btn-default">Remove<span class="glyphicon glyphicon-remove-circle"></span></a>
    </td>
  </tr>
  <%}%>
  </table>
</h1>
<!--Include footer file-->
<%- include('include/_footer')%>
